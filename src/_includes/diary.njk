<section class="diary">
<h1>🖼️ Diary</h1>
<div class="calendar"></div>

{% if entry %}
  <a class="diary-link" href="{{ entry.image }}"><img class="diary-img" src="{{ entry.image }}" /></a>
{% else %}
  <a class="diary-link" href="{{ diary | lastImage }}"><img class="diary-img" data-index="{{diary.length - 1}}" src="{{ diary | lastImage }}" /></a>
{% endif %}

<nav class="diary-actions">
    {% if entry %}
      <a href="{% if pagination.href.previous == null %}{{pagination.href.last}}{% else %}{{ pagination.href.previous }}{% endif %}" data-action="previous">
    {% else %}
      <a href="/diary/{{diary[diary.length - 2].date.year}}/{{diary[diary.length - 2].date.month}}/{{diary[diary.length - 2].date.day}}" data-action="previous">
    {% endif %}
    <svg fill="currentColor" viewBox="0 0 20 20" class="w-8 h-8"><path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
    <span>Previous</span>
  </a>
  <a href="/diary/archive" data-action="calendar">
    <svg fill="currentColor" viewBox="0 0 20 20" class="w-8 h-8"><path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path></svg>
    <span>Calendar</span>
  </a>
  <a href="/" data-action="latest">
    <svg fill="currentColor" viewBox="0 0 20 20" class="w-8 h-8"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path></svg>
    <span>Latest</span>
  </a>
    {% if entry %}
      <a href="{% if pagination.href.next == null %}{{pagination.href.first}}{% else %}{{ pagination.href.next }}{% endif %}" data-action="next">
    {% else %}
      <a href="/diary/{{diary[0].date.year}}/{{diary[0].date.month}}/{{diary[0].date.day}}" data-action="next">
    {% endif %}
    <svg fill="currentColor" viewBox="0 0 20 20" class="w-8 h-8"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
    <span>Next</span>
  </a>
</nav>
</section>

<div class="calendar"></div>